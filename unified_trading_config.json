{
    "system_name": "Unified ML Trading System",
    "version": "1.0.0",
    "description": "Consolidates elite stock selector, AI portfolio manager, options trader, and live trading",
    "universe": {
        "max_stocks": 150,
        "refresh_days": 5,
        "selection_method": "elite_ai_scoring",
        "min_market_cap": 5000000000,
        "min_avg_volume": 5000000,
        "min_price": 15,
        "max_price": 1000,
        "sectors_enabled": [
            "Technology",
            "Healthcare",
            "Financial Services",
            "Consumer Discretionary",
            "Communication Services",
            "Energy",
            "Industrials"
        ]
    },
    "portfolio": {
        "initial_capital": 100000,
        "position_sizing_method": "kelly_criterion",
        "max_position_size": 0.15,
        "min_position_size": 0.02,
        "max_positions": 15,
        "target_deployment": 0.99,
        "cash_reserve": 0.01,
        "rebalance_threshold": 0.05,
        "kelly_multiplier": 1.5
    },
    "risk_management": {
        "max_daily_loss": 0.02,
        "max_drawdown": 0.10,
        "stop_loss_atr": 2.0,
        "trailing_stop_atr": 1.5,
        "take_profit_atr": 3.0,
        "volatility_scaling": true,
        "kelly_fraction_cap": 0.25,
        "var_limit": 0.05,
        "correlation_limit": 0.7
    },
    "ml_config": {
        "models_enabled": [
            "lightgbm",
            "random_forest",
            "gradient_boosting"
        ],
        "ensemble_method": "weighted_average",
        "cv_folds": 5,
        "embargo_days": 3,
        "min_r2_score": 0.01,
        "prediction_horizon_days": 5,
        "feature_selection": "automated",
        "hyperparameter_tuning": true,
        "model_retraining_days": 30,
        "drift_detection": true,
        "calibration_method": "isotonic"
    },
    "technical_indicators": {
        "rsi_period": 14,
        "rsi_oversold": 30,
        "rsi_overbought": 70,
        "ma_periods": [
            5,
            10,
            20,
            50
        ],
        "momentum_periods": [
            5,
            10,
            20
        ],
        "volatility_lookback": 20,
        "atr_period": 14,
        "bollinger_period": 20,
        "bollinger_std": 2,
        "macd_fast": 12,
        "macd_slow": 26,
        "macd_signal": 9,
        "volume_lookback": 20
    },
    "signals": {
        "buy_threshold": 0.30,
        "sell_threshold": 0.25,
        "position_sizing": "kelly_dynamic",
        "signal_combination": "ml_technical_hybrid",
        "correlation_limit": 0.65,
        "ml_weight": 0.4,
        "technical_weight": 0.3,
        "options_weight": 0.3,
        "min_signal_strength": 0.30,
        "min_conviction": 0.6,
        "signal_decay_hours": 4,
        "confluence_required": true,
        "regime_adjustment": true
    },
    "options_strategies": {
        "enabled": true,
        "max_options_allocation": 0.3,
        "strategies": [
            "long_call",
            "long_put",
            "bull_call_spread",
            "bear_put_spread",
            "iron_condor",
            "covered_call"
        ],
        "min_iv_rank": 20,
        "max_iv_rank": 80,
        "min_days_to_expiry": 14,
        "max_days_to_expiry": 45,
        "profit_target": 0.5,
        "stop_loss": 0.5
    },
    "execution": {
        "mode": "paper",
        "broker": "alpaca",
        "order_type": "limit",
        "limit_offset_bps": 5,
        "max_order_size_adv": 0.05,
        "execution_algorithm": "twap",
        "smart_routing": true,
        "avoid_auction": true,
        "slippage_model": "linear",
        "commission_bps": 1.0
    },
    "performance_targets": {
        "annual_return_target": 30,
        "min_sharpe_ratio": 1.0,
        "max_drawdown_target": 0.08,
        "min_win_rate": 0.55,
        "min_profit_factor": 1.5,
        "min_calmar_ratio": 0.5,
        "benchmark": "SPY"
    },
    "backtesting": {
        "train_period_months": 12,
        "validation_period_months": 3,
        "test_period_months": 3,
        "walk_forward": true,
        "purged_cv": true,
        "embargo_days": 3,
        "transaction_costs": true,
        "slippage_model": "realistic",
        "regime_analysis": true
    },
    "data_config": {
        "primary_source": "yfinance",
        "backup_sources": [
            "alpaca",
            "polygon"
        ],
        "intervals": [
            "1m",
            "5m",
            "15m",
            "1d"
        ],
        "max_history_days": 730,
        "fundamental_data": false,
        "alternative_data": false,
        "news_sentiment": false,
        "earnings_calendar": true
    },
    "rebalancing": {
        "frequency": "daily",
        "intraday_enabled": true,
        "eod_rebalance": true,
        "signal_refresh_hours": [
            9,
            12,
            15
        ],
        "market_hours_only": true,
        "premarket_enabled": false,
        "aftermarket_enabled": false
    },
    "logging": {
        "level": "INFO",
        "file_logging": true,
        "console_logging": true,
        "trade_logging": true,
        "performance_logging": true,
        "error_notifications": true,
        "daily_reports": true,
        "weekly_reports": true
    },
    "monitoring": {
        "real_time_pnl": true,
        "risk_monitoring": true,
        "position_monitoring": true,
        "signal_monitoring": true,
        "model_monitoring": true,
        "drift_monitoring": true,
        "performance_attribution": true
    },
    "compliance": {
        "position_limits": true,
        "sector_limits": true,
        "correlation_limits": true,
        "concentration_limits": true,
        "liquidity_requirements": true,
        "risk_limit_monitoring": true
    }
}